{{#if updateBlogForm}}
  <h4>Update {{blog.title}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=blog.title}}
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          {{input value=description id="description" placeholder=blog.description}}
        </div>

        <div class="form-group">
          <label for="article">Article</label>
          {{input value=article id="article" placeholder=blog.article}}
        </div>

        <div class="form-group">
          <label for="author">Author Name</label>
          {{input value=author id="author" placeholder=blog.author}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image" placeholder=blog.image}}
        </div>

        <button {{action 'update' blog}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateBlogForm'}}>Update</button>
{{/if}}
