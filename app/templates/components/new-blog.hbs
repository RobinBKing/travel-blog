{{#if addNewBlog}}
  <h1>New Blog</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          {{input value=description id="description"}}
        </div>

        <div class="form-group">
          <label for="article">Article</label>
          {{input value=article id="article"}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image"}}
        </div>

        <button {{action 'saveBlog1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'blogFormShow'}}>New Blog</button>
{{/if}}
